@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <h1>Welcome, @User.Identity.Name</h1>

        <p>
            @foreach (var claim in Context.User.Claims)
            {
                <div>@claim.Type: <b>@claim.Value</b></div>
            }
        </p>

        <a asp-area="" asp-controller="Authentication" asp-action="SignOut" asp-route-returnUrl="/" class="btn btn-lg btn-danger">Sign out</a>
    }

    else
    {
        <h1>Welcome, anonymous</h1>
        <a asp-area="" asp-controller="Authentication" asp-action="SignIn" class="btn btn-lg btn-success">Sign in</a>
    }
</div>

